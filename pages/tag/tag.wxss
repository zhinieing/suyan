Page{
  height: 100%;
}

.tag-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tag-title {
  margin: 16rpx auto 0;
  font-size: 36rpx;
  line-height: 2;
  color: #555;
}

.topic-common-list {
   margin: 0 auto;
   padding: 16rpx;
   display: block;
   text-align: center;
   font-size: 30rpx;
   line-height: 2;
   color: #555;
}

.list-item {
  display: inline-block;
  margin: 16rpx;
  border-bottom: 1px solid #999;
}
